<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:id="@+id/swipe_reveal_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <LinearLayout
        android:id="@+id/swipeable_underlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_border"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/unmet_need"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#000"
            tools:text="Good quality coffee"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow"/>

        <TextView
            android:id="@+id/solution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#000"
            tools:text="Italian espresso in a/c cafÃ©"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/swipeable_overlay"
        tools:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/swipe_to_reveal_blue">

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
